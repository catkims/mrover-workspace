[Unit]
Description=MRover Jetson Raman Spectroscope Service

[Service]
EnvironmentFile=/etc/default/rover.env
User={{ running_user }}
ExecStart=socat tcp-listen:8888,reuseaddr,fork file:/dev/ttyACM0,nonblock,waitlock=/var/run/tty0.lock,b115200,raw,echo=0
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
